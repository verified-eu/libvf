{
    "plugins": [],
    "recurseDepth": 10,
    "source": {
        "include": ["src"],
        "includePattern": ".+\\.js(doc|x)?$"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : true,
        "lenient"       : true,
        "destination"   : "./docs",
        "template"      : "./node_modules/@pixi/jsdoc-template"
    }
}